<Window x:Class="PaintEffectsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paint Effects - Foliage, Fire, and Smoke"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0"
                Orientation="Horizontal"
                Background="#2C3E50"
                Margin="0,0,0,5">
            <Label Content="Brush Type:"
                    Foreground="White"
                    VerticalAlignment="Center"
                    Margin="10,5"/>

            <!-- Foliage Brush -->
            <Button Name="FoliageButton"
                    Content="🌿 Foliage"
                    Width="100"
                    Height="35"
                    Margin="5"
                    Background="#27AE60"
                    Foreground="White"
                    Click="FoliageButton_Click"/>

            <!-- Fire Brush -->
            <Button Name="FireButton"
                    Content="🔥 Fire"
                    Width="100"
                    Height="35"
                    Margin="5"
                    Background="#E74C3C"
                    Foreground="White"
                    Click="FireButton_Click"/>

            <!-- Smoke Brush -->
            <Button Name="SmokeButton"
                    Content="💨 Smoke"
                    Width="100"
                    Height="35"
                    Margin="5"
                    Background="#7F8C8D"
                    Foreground="White"
                    Click="SmokeButton_Click"/>

            <!-- Clear Canvas -->
            <Button Name="ClearButton"
                    Content="Clear"
                    Width="80"
                    Height="35"
                    Margin="20,5,5,5"
                    Background="#34495E"
                    Foreground="White"
                    Click="ClearButton_Click"/>

            <!-- Brush Size Slider -->
            <Label Content="Size:"
                    Foreground="White"
                    VerticalAlignment="Center"
                    Margin="20,5,5,5"/>
            <Slider Name="BrushSizeSlider"
                    Width="100"
                    Height="20"
                    Minimum="5"
                    Maximum="50"
                    Value="15"
                    VerticalAlignment="Center"
                    Margin="5"/>
        </StackPanel>

        <!-- Drawing Canvas -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#BDC3C7"
                BorderThickness="2"
                Margin="5">
            <Canvas Name="DrawingCanvas"
                    Background="White"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                    MouseMove="Canvas_MouseMove"
                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp"/>
        </Border>
    </Grid>
</Window>